            "version" : "master",
            "no-autodownload" : true
        },
        "com.valvesoftware.Steam.Utility" : {
            "subdirectories" : true,
            "directory" : "utils",
            "version" : "stable",
            "versions" : "stable;beta;test",
            "add-ld-path" : "lib",
            "merge-dirs" : "bin",
            "no-autodownload" : true,
            "autodelete" : true
