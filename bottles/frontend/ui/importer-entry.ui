<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <requires lib="libadwaita" version="1.0"/>
    <object class="GtkPopover" id="pop_actions">
        <style>
            <class name="menu"/>
        </style>
        <child>
            <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">3</property>
                <child>
                    <object class="GtkModelButton" id="btn_browse">
                        <property name="text" translatable="yes">Browse files</property>
                    </object>
                </child>
            </object>
        </child>
    </object>
    <template class="ImporterEntry" parent="AdwActionRow">
        <property name="title" comments="A Wine prefix is a separate environment (C:\ drive) for the Wine program" translatable="yes">Wine prefix name</property>
        <child>
            <object class="GtkBox">
                <property name="spacing">6</property>
                <child>
                    <object class="GtkLabel" id="label_manager">
                        <property name="valign">center</property>
                        <property name="label" translatable="yes">Manager</property>
                        <style>
                            <class name="tag"/>
                            <class name="caption"/>
                        </style>
                    </object>
                </child>
                <child>
                    <object class="GtkImage" id="img_lock">
                        <property name="visible">False</property>
                        <property name="tooltip-text" translatable="yes">This Wine prefix was already imported in Bottles.</property>
                        <property name="valign">center</property>
                        <property name="icon-name">channel-secure-symbolic</property>
                        <style>
                            <class name="tag"/>
                            <class name="caption"/>
                        </style>
                    </object>
                </child>
                <child>
                    <object class="GtkButton" id="btn_import">
                        <property name="valign">center</property>
                        <child>
                            <object class="GtkImage">
                                <property name="icon-name">document-save-symbolic</property>
                            </object>
                        </child>
                        <style>
                            <class name="flat"/>
                        </style>
                    </object>
                </child>
                <child>
                    <object class="GtkSeparator">
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                    </object>
                </child>
                <child>
                    <object class="GtkMenuButton">
                        <property name="valign">center</property>
                        <property name="popover">pop_actions</property>
                        <property name="icon-name">view-more-symbolic</property>
                        <style>
                          <class name="flat"/>
                        </style>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>
