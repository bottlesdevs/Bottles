{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flatpak: build",
            "command": "flatpak-spawn",
            "args": [
                "--host",
                "flatpak",
                "run",
                "org.flatpak.Builder",
                "build",
                "com.usebottles.bottles.dev.yml",
                "--user",
                "--install",
                "--force-clean",
                "&&",
                "flatpak-spawn",
                "--host",
                "flatpak",
                "run",
                "com.usebottles.bottles"
            ],
            "type": "shell"
        }
    ]
}
