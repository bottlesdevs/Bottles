<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <requires lib="libadwaita" version="1.0"/>
    <template class="DriveEntry" parent="AdwActionRow">
        <property name="title">C:</property>
        <property name="subtitle" translatable="yes">/point/to/path</property>
        <child>
            <object class="GtkBox">
                <property name="spacing">6</property>
                <child>
                    <object class="GtkButton" id="btn_remove">
                        <property name="valign">center</property>
                        <property name="tooltip-text" translatable="yes">Remove</property>
                        <property name="icon-name">user-trash-symbolic</property>
                        <style>
                            <class name="flat"/>
                        </style>
                    </object>
                </child>
                <child>
                    <object class="GtkButton" id="btn_path">
                        <property name="valign">center</property>
                        <property name="tooltip-text" translatable="yes">Choose a Directory</property>
                        <property name="icon-name">document-open-symbolic</property>
                        <style>
                            <class name="flat"/>
                        </style>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>
