<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  <requires lib="libhandy" version="1.0"/>
  <template class="DetailsPrograms" parent="GtkScrolledWindow">
    
    <child>
      <object class="GtkViewport">
        <child>
          <object class="AdwClamp">
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="AdwStatusPage" id="hdy_status">
                    <property name="icon-name">preferences-desktop-apps-symbolic</property>
                    <property name="title" translatable="yes">No programs found</property>
                    <property name="description" translatable="yes">Install programs from the installers section or by running the installer executable, you can also manually add executables with the "+" button</property>
                    <child>
                      <placeholder/>
                    </child>
                  </object>
                  
                  
                </child>
                <child>
                  <object class="GtkListBox" id="list_programs">
                    <property name="selection-mode">none</property>
                    <style>
                      <class name="content"/>
                    </style>
                  </object>
                  
                  
                </child>
                <child>
                  <placeholder/>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  <object class="GtkPopover" id="pop_context">
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">3</property>
        <child>
          <object class="GtkModelButton" id="btn_toggle_removed">
            
            <property name="tooltip-text" translatable="yes">Read documentation about dependencies	</property>
            <property name="text" translatable="yes">Show/hide hidden programs</property>
          </object>
          
          
        </child>
        <child>
          <object class="GtkSeparator">
          </object>
          
          
        </child>
        <child>
          <object class="GtkModelButton" id="btn_help">
            
            <property name="tooltip-text" translatable="yes">Read documentation about programs	</property>
            <property name="text" translatable="yes">Documentation</property>
          </object>
          
          
        </child>
      </object>
    </child>
  </object>
  <object class="GtkBox" id="actions">
    <property name="spacing">8</property>
    <child>
      <object class="GtkMenuButton">
        
        <property name="focus-on-click">False</property>
        <property name="valign">center</property>
        <property name="popover">pop_context</property>
        <child>
          <object class="GtkImage">
            <property name="icon-name">view-more-symbolic</property>
          </object>
        </child>
      </object>
      
      
    </child>
    <child>
      <object class="GtkButton" id="btn_update">
        
        <property name="tooltip-text" translatable="yes">Search for installed programs</property>
        <property name="halign">center</property>
        <property name="valign">center</property>
        <child>
          <object class="GtkImage">
            <property name="icon-name">view-refresh-symbolic</property>
          </object>
        </child>
        <style>
          <class name="image-button"/>
        </style>
      </object>
      
      
    </child>
    <child>
      <object class="GtkButton" id="btn_add">
        
        <property name="tooltip-text" translatable="yes">Add a custom executable path</property>
        <property name="halign">center</property>
        <property name="valign">center</property>
        <child>
          <object class="GtkImage">
            <property name="icon-name">list-add-symbolic</property>
          </object>
        </child>
        <style>
          <class name="image-button"/>
        </style>
      </object>
      
      
    </child>
  </object>
</interface>
